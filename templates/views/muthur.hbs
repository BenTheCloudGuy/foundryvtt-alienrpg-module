<div class="wy-view-muthur">
  <div class="wy-muthur-output" id="wy-muthur-output">
    <div class="wy-muthur-line system">╠█▓▒░ {{muthurHeader}} — INTERFACE ACTIVE ░▒▓█╣</div>
    <div class="wy-muthur-line system">━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━</div>
    {{#each chatHistory}}
    <div class="wy-muthur-line {{this.type}}">
      {{#if (eq this.type 'user')}}<span class="prefix">»</span>{{/if}}
      {{#if (eq this.type 'muthur')}}<span class="prefix">MU/TH/UR:</span>{{/if}}
      {{#if (eq this.type 'system')}}<span class="prefix">[SYS]</span>{{/if}}
      {{this.text}}
    </div>
    {{/each}}
  </div>
  <div class="wy-muthur-input-bar">
    <span class="wy-muthur-prompt">»</span>
    <input class="wy-muthur-input"
           id="wy-muthur-input"
           type="text"
           placeholder="ENTER QUERY..."
           autocomplete="off"
           spellcheck="false"
           data-action="muthur-input" />
  </div>

  {{!-- On-screen touch keyboard --}}
  <div class="wy-osk" id="wy-osk">
    <div class="wy-osk-row">
      <button class="wy-osk-key" data-key="1">1</button>
      <button class="wy-osk-key" data-key="2">2</button>
      <button class="wy-osk-key" data-key="3">3</button>
      <button class="wy-osk-key" data-key="4">4</button>
      <button class="wy-osk-key" data-key="5">5</button>
      <button class="wy-osk-key" data-key="6">6</button>
      <button class="wy-osk-key" data-key="7">7</button>
      <button class="wy-osk-key" data-key="8">8</button>
      <button class="wy-osk-key" data-key="9">9</button>
      <button class="wy-osk-key" data-key="0">0</button>
    </div>
    <div class="wy-osk-row">
      <button class="wy-osk-key" data-key="Q">Q</button>
      <button class="wy-osk-key" data-key="W">W</button>
      <button class="wy-osk-key" data-key="E">E</button>
      <button class="wy-osk-key" data-key="R">R</button>
      <button class="wy-osk-key" data-key="T">T</button>
      <button class="wy-osk-key" data-key="Y">Y</button>
      <button class="wy-osk-key" data-key="U">U</button>
      <button class="wy-osk-key" data-key="I">I</button>
      <button class="wy-osk-key" data-key="O">O</button>
      <button class="wy-osk-key" data-key="P">P</button>
    </div>
    <div class="wy-osk-row">
      <button class="wy-osk-key" data-key="A">A</button>
      <button class="wy-osk-key" data-key="S">S</button>
      <button class="wy-osk-key" data-key="D">D</button>
      <button class="wy-osk-key" data-key="F">F</button>
      <button class="wy-osk-key" data-key="G">G</button>
      <button class="wy-osk-key" data-key="H">H</button>
      <button class="wy-osk-key" data-key="J">J</button>
      <button class="wy-osk-key" data-key="K">K</button>
      <button class="wy-osk-key" data-key="L">L</button>
    </div>
    <div class="wy-osk-row">
      <button class="wy-osk-key" data-key="Z">Z</button>
      <button class="wy-osk-key" data-key="X">X</button>
      <button class="wy-osk-key" data-key="C">C</button>
      <button class="wy-osk-key" data-key="V">V</button>
      <button class="wy-osk-key" data-key="B">B</button>
      <button class="wy-osk-key" data-key="N">N</button>
      <button class="wy-osk-key" data-key="M">M</button>
    </div>
    <div class="wy-osk-row">
      <button class="wy-osk-key wy-osk-backspace" data-key="BACKSPACE">⌫ BACKSPACE</button>
      <button class="wy-osk-key wy-osk-space" data-key=" ">SPACE</button>
      <button class="wy-osk-key" data-key=".">.</button>
      <button class="wy-osk-key" data-key="-">-</button>
      <button class="wy-osk-key" data-key="?">?</button>
      <button class="wy-osk-key" data-key="!">!</button>
      <button class="wy-osk-key wy-osk-enter" data-key="ENTER">SEND</button>
    </div>
  </div>
</div>
